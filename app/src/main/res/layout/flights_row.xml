<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/filterButtonBG"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:weightSum="1"
            android:background="@color/highlighted_text_material_dark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Option 1"
                android:id="@+id/option_txt" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Price 1,18,888"
                android:gravity="right"
                android:id="@+id/flight_price" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dip"
            android:text="Onward  BOM to MRU (Jun 29th, 2015 08:44AM)"
            android:textSize="11sp"
            android:textStyle="bold"
            android:id="@+id/onward_header" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*"
            android:shrinkColumns="*"
            android:id="@+id/onward_table">

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />


            <TableRow android:gravity="center"
                android:id="@+id/row1">

                <TextView
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="3dip"
                    android:text="Filght"
                    android:textSize="10sp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="3dip"
                    android:text="Arrival"
                    android:textSize="10sp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="3dip"
                    android:text="Departure"
                    android:textSize="10sp"
                    android:id="@+id/department" />

            </TableRow>

            <View

                android:layout_height="2dip"
                android:background="#FF909090" />


        </TableLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dip"
            android:text="Return  BOM to MRU (Jun 29th, 2015 08:44AM)"
            android:textSize="11sp"
            android:textStyle="bold"
            android:id="@+id/return_header" />


        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*"
            android:id="@+id/return_table">

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />


            <TableRow android:gravity="center">

                <TextView
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="3dip"
                    android:text="Filght"
                    android:textSize="10sp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="3dip"
                    android:text="Arrival"
                    android:textSize="10sp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="3dip"
                    android:text="Departure"
                    android:textSize="10sp" />

            </TableRow>

            <View

                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow android:weightSum="100">

                <TextView

                    android:layout_height="fill_parent"
                    android:layout_weight="25"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="3dip"
                    android:text="AirIndia\n231"
                    android:textSize="10sp" />

                <TextView

                    android:layout_height="fill_parent"
                    android:layout_weight="25"
                    android:ellipsize="none"
                    android:gravity="center_vertical|center_horizontal"

                    android:padding="3dip"
                    android:scrollHorizontally="false"
                    android:text="Jul 26th, 2015\n04:00 AM. \nMumbai"
                    android:textSize="10sp" />

                <TextView

                    android:layout_height="fill_parent"
                    android:layout_weight="25"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="3dip"
                    android:text="Jul 26th, 2015\n04:00 AM. \nMumbai"
                    android:textSize="10sp" />

                <TextView

                    android:layout_height="fill_parent"
                    android:layout_weight="25"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="3dip"
                    android:text="3,00,000"
                    android:textSize="10sp" />
            </TableRow>


            <View
                android:layout_height="2dip"
                android:background="#FF909090" />


        </TableLayout>


        <Button
            android:id="@+id/btn_select"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/style_filterbutton"
            android:text="Select"
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </LinearLayout>


</RelativeLayout>