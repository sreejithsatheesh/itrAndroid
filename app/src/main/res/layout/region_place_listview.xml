<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rsb="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/filterButtonBG">

    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/filterdetails"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:weightSum="5"
            android:layout_margin="15dp"
            android:background="@drawable/round_edittext_day_night"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Number of nights : "
                android:textSize="15dp"
                android:gravity="center_vertical"/>

            <Button
                android:layout_width="49dp"
                android:layout_height="40dp"
                android:text="-"
                android:background="#fffefffd"
                android:textStyle="bold"
                android:textSize="25dp"
                android:id="@+id/subbtn"
                android:gravity="center"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="2dp"
                android:background="@color/filterButtonBG"
                android:layout_margin="10dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="49dp"
                android:layout_height="40dp"
                android:text="All"
                android:textSize="10dp"
                android:background="#fffefffd"
                android:gravity="center"
                android:id="@+id/day_night" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="2dp"
                android:background="@color/filterButtonBG"
                android:layout_margin="10dp"
                android:layout_height="match_parent"/>
            <Button
                android:layout_width="49dp"
                android:layout_height="40dp"
                android:text="+"
                android:background="#fffefffd"
                android:textStyle="bold"
                android:textSize="25dp"
                android:gravity="center"
                android:id="@+id/addbtn" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Price Range"
            android:layout_marginLeft="15dp"
            android:id="@+id/textView" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12000"
                android:paddingLeft="20dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/minvalue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="110000"
                android:paddingRight="20dp"
                android:layout_alignParentRight="true"
                android:id="@+id/maxvalue" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/seekbar_placeholder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/filterButtonBG"
        android:layout_gravity="center">

        <Button
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="Filter"
            android:textColor="@color/white"
            android:background="@drawable/style_filterbutton"
            android:id="@+id/addbtnfilter" />
    </LinearLayout>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView"/>

</LinearLayout>